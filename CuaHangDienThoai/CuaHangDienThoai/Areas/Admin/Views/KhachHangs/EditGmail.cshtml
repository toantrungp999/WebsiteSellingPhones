@model CuaHangDienThoai.Models.KhachHang
@{
    ViewData["Title"] = "Chỉnh sửa Gmail";
}
<br />
<h2 style="text-align:center" class="text-info">Chỉnh sửa Gmail</h2>
<form method="post" asp-action="EditGmail">
    <div class="p-4 border rounded" style="text-align:center">
        <input hidden asp-for="MaKH" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" type="email" class="form-control" />
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-TenTK="@Model.MaKH" value="Lưu" />
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </div>
    </div>
</form>
