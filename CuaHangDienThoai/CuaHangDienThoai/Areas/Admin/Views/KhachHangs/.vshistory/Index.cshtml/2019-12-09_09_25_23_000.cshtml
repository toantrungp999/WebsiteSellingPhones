@model CuaHangDienThoai.Models.View.KhachHangsPaging
@{
    ViewData["Title"] = "Danh sách khách hàng";
}
<br />
<h2 style="text-align:center" class="text-info">Danh sách khách hàng</h2>
<br />
<form method="get">
    <div>
        <div style="height:150px; background-color:aliceblue" class="container">
            <div class="col-12">
                <div class="row" style="padding-top:10px;">
                    <label>Tìm kiếm</label>
                </div>
                <div class="row" style="padding-top:10px;">
                    <div class="col-2">
                        Tên khách hàng
                    </div>
                    <div class="col-3">
                        @Html.Editor("searchTenKH", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-2">

                    </div>
                    <div class="col-2">
                        Số điện thoại
                    </div>
                    <div class="col-3">
                        @Html.Editor("searchSDT", new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                </div>

                <div class="row" style="padding-top:10px;">
                    <div class="col-2">
                    </div>
                    <div class="col-3">
                    </div>
                    <div class="col-2">

                    </div>
                    <div class="col-2">
                    </div>
                    <div class="col-3">
                        <button type="submit" name="submit" value="Search" class="btn btn-primary form-control">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>

                </div>
            </div>
        </div>
        <table class="table table-striped border" style="text-align:center">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().TenKH)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().SoDienThoai)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.KhachHangs.FirstOrDefault().GioiTinh)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model.KhachHangs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.SoDienThoai)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.GioiTinh)
                    </td>
                    <td style="width:150px">
                        <div class="btn-group" role="group">
                            <a type="button" class="btn btn-success" asp-action="DetailsKhachHang" asp-route-MaKH="@item.MaKH">
                                <i class="far fa-list-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
        <div class="form-group d-flex justify-content-center">
            <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
                 page-class="btn border" page-class-normal="btn btn-default active"
                 page-class-selected="btn btn-primary active" class="btn-group m-1"></div>
        </div>

    </div>
</form>


