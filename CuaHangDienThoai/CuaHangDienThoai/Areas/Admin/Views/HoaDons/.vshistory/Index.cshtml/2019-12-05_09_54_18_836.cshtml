@model CuaHangDienThoai.Models.View.HoaDonsPaging
@{
    ViewData["Title"] = "Index";
}

<br />
<h2 class="text-info" style="text-align:center">Danh sách hóa đơn</h2>
<br />
<form method="get">
    <div>
        <div style="height:150px; background-color:aliceblue" class="container">
            @* We will add search criteria *@
            <div class="col-12">
                <div class="row" style="padding-top:10px;">
                    <div class="col-2">
                        Mã hóa đơn
                    </div>
                    <div class="col-3">
                        @Html.Editor("searchMaHD", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-2">

                    </div>
                    <div class="col-2">
                        Tên khách hàng
                    </div>
                    <div class="col-3">
                        @Html.Editor("searchTenKH", new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                </div>

                <div class="row" style="padding-top:10px;">
                    <div class="col-2">
                    </div>
                    <div class="col-3">
                    </div>
                    <div class="col-2">

                    </div>
                    <div class="col-2">
                    </div>
                    <div class="col-3">
                        <button type="submit" name="submit" value="Search" class="btn btn-primary form-control">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>

                </div>
            </div>
        </div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.HoaDons.FirstOrDefault().MaHD)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.HoaDons.FirstOrDefault().MaDH)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.HoaDons.FirstOrDefault().KhachHang.TenKH)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.HoaDons.FirstOrDefault().NgayLapHD)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.HoaDons.FirstOrDefault().TongThanhToan)
                </th>

                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model.HoaDons)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.MaDH)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.KhachHang.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.MaDH)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.NgayLapHD)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.TongThanhToan)
                    </td>
                    <td style="width:150px">
                        <div class="btn-group" role="group">
                            <a type="button" class="btn btn-success" asp-action="Details" asp-route-MaDH="@item.MaDH">
                                <i class="far fa-list-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
        <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
             page-class="btn border" page-class-normal="btn btn-default active"
             page-class-selected="btn btn-primary active" class="btn-group m-1"></div>
    </div>
</form>
