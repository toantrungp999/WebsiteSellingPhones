@model IEnumerable<CuaHangDienThoai.Models.DienThoai>
@{
    ViewData["Title"] = "Index";
}

<br />
<form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
    <div class="input-group">
        <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-primary" type="button">
                <i class="fas fa-search fa-sm"></i>
            </button>
        </div>
    </div>
</form>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Danh sách điện thoại</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn-btn-info"><i class="fas fa-plus"></i>&nbsp;Thêm điện thoại</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.ModelDienThoai.TenModel)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Mau)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Gia)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.GiamGia)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SoLuong)
            </th>

            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.ModelDienThoai.TenModel)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Mau)
                </td>

                <td>
                    @Html.DisplayFor(m => item.Gia)
                </td>
                <td>
                    @Html.DisplayFor(m => item.GiamGia)
                </td>

                <td>
                    @Html.DisplayFor(m => item.SoLuong)
                </td>
                <td style="width:150px">
                    <div class="btn-group" role="group">
                        <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-MaDT="@item.MaDT">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a type="button" class="btn btn-success" asp-action="Details" asp-route-MaDT="@item.MaDT">
                            <i class="far fa-list-alt"></i>
                        </a>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-MaDT="@item.MaDT">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>

