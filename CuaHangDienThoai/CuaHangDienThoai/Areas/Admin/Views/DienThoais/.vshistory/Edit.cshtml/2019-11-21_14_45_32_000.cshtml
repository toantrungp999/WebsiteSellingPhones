@model CuaHangDienThoai.Models.View.DienThoaisViewModel
@using CuaHangDienThoai.Extensions
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Chỉnh sửa điện thoại</h2>
<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input hidden asp-for="DienThoais.MaDT" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ModelDienThoais"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.DienThoais.MaModel" asp-items="Model.ModelDienThoais.ToSelectListModelDienThoai(Model.DienThoais.MaModel)" class="form-control"></select>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="DienThoais.Mau"></label>
                </div>
                <div class="col-5">
                    <input asp-for="DienThoais.Mau" class="form-control" />
                </div>
                <span asp-validation-for="DienThoais.Mau" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="DienThoais.Gia"></label>
                </div>
                <div class="col-5">
                    <input type="number" asp-for="DienThoais.Gia" class="form-control" />
                </div>
                <span asp-validation-for="DienThoais.Gia" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="DienThoais.GiamGia"></label>
                </div>
                <div class="col-5">
                    <input type="number" asp-for="DienThoais.GiamGia" class="form-control" />
                </div>
                <span asp-validation-for="DienThoais.GiamGia" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="DienThoais.SoLuong"></label>
                </div>
                <div class="col-5">
                    <input type="number" asp-for="DienThoais.SoLuong" class="form-control" />
                </div>
                <span asp-validation-for="DienThoais.SoLuong" class="text-danger"></span>
            </div>
            @*<div class="form-group row">
                <div class="col-2">
                    <label asp-for="DienThoais.Hinh"></label>
                </div>
                <div class="col-5">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>*@
        </div>
        <div class="col-1">
        </div>

        <div class="col-3">
            <img src="@Model.DienThoais.Hinh" width="100%" style="border-radius:5px ; border:1px solid #bbb9b9;" />
        </div>
    </div>
    

    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
        <a asp-action="Index" class="btn btn-success">Trở về</a>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

