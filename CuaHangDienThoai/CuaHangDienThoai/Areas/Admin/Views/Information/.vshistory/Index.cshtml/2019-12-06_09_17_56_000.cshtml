@model CuaHangDienThoai.Models.TaiKhoanAdmin
@{
    ViewData["Title"] = "Thông tin cá nhân";
}
<br />
<h2 class="text-info" style="text-align:center">Thông tin cá nhân</h2>
<div class="p-4 rounded">
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="User"></label>
        </div>
        <div class="col-4">
            <input asp-for="User" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-4">
            <input readonly asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="PhoneNumber"></label>
        </div>
        <div class="col-4">
            <input readonly asp-for="PhoneNumber" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="Role"></label>
        </div>
        <div class="col-4">
            <input readonly asp-for="Role" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2"></div>
        <div class="col-2">
            <label asp-for="TrangThai"></label>
        </div>
        <div class="col-4">
            <input type="checkbox" disabled asp-for="TrangThai" />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-2">
            <a asp-action="Edit" asp-route-User="@Model.User" class="btn btn-danger">Chỉnh sửa</a>
        </div>
        <div class="col-2">
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </div>
    </div>
</div>

