@model CuaHangDienThoai.Models.Hang
@{
    ViewData["Title"] = "Chi tiết hãng";
}
<br />
<h2 class="text-info">Chi tiết hãng</h2>
<div class="p-4 border rounded">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TenHang"></label>
        </div>
        <div class="col-5">
            <input asp-for="TenHang" disabled class="form-control" />
        </div>
        <span asp-validation-for="TenHang" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="TrangThai"></label>
        </div>
        <div class="col-8">
            <input type="checkbox" readonly asp-for="TrangThai"/>
        </div>

    </div>
    <br />
    <div class="form-group">
        <a asp-action="EditPass" asp-route-MaHang="@Model.MaHang" class="btn btn-danger">Chỉnh sửa</a>
        <a asp-action="Index" class="btn btn-success">Trở về</a>
    </div>
</div>
