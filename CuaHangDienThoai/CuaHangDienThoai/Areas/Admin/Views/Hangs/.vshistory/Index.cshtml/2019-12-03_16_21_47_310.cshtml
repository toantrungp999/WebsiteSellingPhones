@model IEnumerable<CuaHangDienThoai.Models.Hang>
@{
    ViewData["Title"] = "Index";
}
<br />
<h2 class="text-info" style="text-align:center">Danh sách hãng</h2>
<a asp-action="Create" class="btn-btn-info"><i class="fas fa-plus"></i>&nbsp;Thêm mới hãng</a>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.TenHang)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.TrangThai)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.TenHang)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TrangThai)
                </td>
                <td style="width:150px">
                    <div class="btn-group" role="group">
                        <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-MaHang="@item.MaHang">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a type="button" class="btn btn-success" asp-action="Details" asp-route-MaHang="@item.MaHang">
                            <i class="far fa-list-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>



