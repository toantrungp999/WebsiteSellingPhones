@model IEnumerable<CuaHangDienThoai.Models.TaiKhoanAdmin>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped border">
    <thead>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(model => model.Pass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td style="width:150px">
                <div class="btn-group" role="group">
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.User">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a type="button" class="btn btn-success" asp-action="Details" asp-route-id="@item.User">
                        <i class="far fa-list-alt"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
