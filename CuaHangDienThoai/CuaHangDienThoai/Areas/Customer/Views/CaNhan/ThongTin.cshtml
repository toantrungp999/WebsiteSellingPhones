@model CuaHangDienThoai.Models.KhachHang
@{
    ViewData["Title"] = "Thông tin";
}
@if (TempData["SuaThongTin"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@TempData["SuaThongTin"]</strong>
    </div>
    TempData.Remove("SuaThongTin");
}
@if (TempData["SuaTaiKhoan"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@TempData["SuaTaiKhoan"]</strong>
    </div>
    TempData.Remove("SuaTaiKhoan");
}
<h2 class="text-info" style="padding-left: 370px">Thông tin khách hàng</h2>
<form enctype="multipart/form-data">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-5">
            <div class="p-4 border rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Email" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaiKhoan.TenTK"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaiKhoan.TenTK" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="TaiKhoan.TenTK" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <a asp-action="SuaTaiKhoan">Đổi mật khẩu</a><br />
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.TenKH"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.TenKH" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="@Model.TenKH" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.GioiTinh"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.GioiTinh" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.SoDienThoai"></label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="@Model.SoDienThoai" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="@Model.SoDienThoai" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.DiaChi"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="@Model.DiaChi" class="form-control" style="resize:none;" readonly> </textarea>
                    </div>
                    <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <a asp-action="SuaThongTin">Sửa thông tin</a>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Trở về</a>
                </div>
            </div>
        </div>
    </div>
</form>


